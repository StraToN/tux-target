<?xml version="1.0" standalone="no" ?>
<!-- this is a mtp-target gui resource -->
<resource>
	<object class="CGuiFrame" name="updatingFrame">
		<minSize>400,0</minSize>
		<!-- <position>100,100</position> -->
		<alignment>eAlignCenterVertical|eAlignCenterHorizontal</alignment>
		<element>
			<object class="CGuiVBox" name="vbox">
				<alignment>eAlignExpandHorizontal|eAlignExpandVertical</alignment>
				<element>
					<object class="CGuiText" name="updatingMessage">
						<alignment>eAlignExpandHorizontal|eAlignExpandVertical</alignment>
						<string>Please wait while downloading : </string>
					</object>
					<object class="CGuiText" name="updatingFilename">
						<!-- <alignment>eAlignExpandHorizontal|eAlignExpandVertical</alignment> -->
						<string>file.tga</string>
					</object>
					<object class="CGuiProgressBar" name="updatingProgressBar">
						<alignment>eAlignExpandHorizontal|eAlignCenterVertical</alignment>
						<minSize>80,0</minSize>
					</object>
					<object class="CGuiButton" name="updatingCancel">
						<minSize>80,0</minSize>
						<alignment>eAlignCenterVertical|eAlignRight</alignment>
						<element>
							<object class="CGuiText" name="txtCancel">
								<string>Cancel</string>
							</object>
						</element>
					</object>
				</element>
			</object>
		</element>
	</object>
</resource>
