<?xml version="1.0" standalone="no" ?>
<!-- this is a mtp-target gui resource -->
<resource>
	<object class="CGuiFrame" name="mainFrame">
		<minSize>400,400</minSize>
		<!-- <position>100,100</position> -->
		<alignment>eAlignCenterVertical|eAlignCenterHorizontal</alignment>
		<element>
			<object class="CGuiVBox" name="vbox">
				<alignment>eAlignExpandHorizontal|eAlignExpandVertical</alignment>
				<element>
					<object class="CGuiText" name="entry">
						<alignment>eAlignExpandHorizontal|eAlignExpandVertical</alignment>
						<isEntry>true</isEntry>
						<isEditable>true</isEditable>
						<string>This is A Texte Entry Sample</string>
					</object>
					<object class="CGuiProgressBar" name="progressBar">
						<alignment>eAlignExpandHorizontal|eAlignCenterVertical</alignment>
						<minSize>80,0</minSize>
					</object>
					<object class="CGuiVScale" name="vscale">
						<alignment>eAlignRight|eAlignExpandVertical</alignment>
						<minSize>0,50</minSize>
					</object>
					<object class="CGuiBitmap" name="bmp">
						<filename>logo.tga</filename>
					</object>
					<object class="CGuiHBox" name="volumeHbox">
						<alignment>eAlignExpandHorizontal|eAlignCenterVertical</alignment>
						<element>
							<object class="CGuiText" name="music">
								<string>Music</string>
							</object>
							<object class="CGuiTextPercent" name="textPercent">
								<alignment>eAlignLeft|eAlignCenterVertical</alignment>
								<minSize>40,0</minSize>
							</object>
							<object class="CGuiHScale" name="hscale">
								<alignment>eAlignExpandHorizontal|eAlignCenterVertical</alignment>
								<minSize>0,30</minSize>
							</object>
						</element>
					</object>
					<object class="CGuiHBox" name="hbox">
						<alignment>eAlignRight|eAlignBottom</alignment>
						<element>
							<object class="CGuiButton" name="bYes">
								<minSize>80,0</minSize>
								<element>
									<object class="CGuiText" name="textYes">
										<string>Yes</string>
									</object>
								</element>
							</object>
							<object class="CGuiButton" name="bNo">
								<minSize>80,0</minSize>
								<element>
									<object class="CGuiText" name="textNo">
										<string>No</string>
									</object>
								</element>
							</object>
							<object class="CGuiButton" name="bBitmap">
								<normalBitmapFilename>logo.tga</normalBitmapFilename>
								<minSize>32,32</minSize>
							</object>
						</element>
					</object>
				</element>
			</object>
		</element>
	</object>
</resource>
